{% extends ':Mail:base_email.html.twig' %}

{% block subject %}
    {%- autoescape false -%}
        Nouveau contact
    {%- endautoescape -%}
{% endblock %}

{% block body_text %}
    {% autoescape false %}
        Salut test
    {% endautoescape %}
{% endblock %}

{% block mail_content %}
    {% autoescape false %}
        <table>
            <tr>
                <td>Civilité</td>
                <td>{{ contact.civilityLabel }}</td>
            </tr>
            <tr>
                <td>Nom</td>
                <td>{{ contact.name }}</td>
            </tr>
            <tr>
                <td>Prénom</td>
                <td>{{ contact.firstname }}</td>
            </tr>
            <tr>
                <td>Email</td>
                <td>{{ contact.email }}</td>
            </tr>
            <tr>
                <td>Téléphone</td>
                <td>{{ contact.phone }}</td>
            </tr>
            <tr>
                <td>Adresse</td>
                <td>{{ contact.address }}</td>
            </tr>
            <tr>
                <td>Ville</td>
                <td>{{ contact.city }}</td>
            </tr>
            <tr>
                <td>Code postale</td>
                <td>{{ contact.zip }}</td>
            </tr>
            <tr>
                <td>Message</td>
                <td>{{ contact.message }}</td>
            </tr>
        </table>
    {% endautoescape %}
{% endblock %}
